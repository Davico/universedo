---
interface Props {
    content: {
        title: string;
        titleHighlight: string;
        titleEnd: string;
        description: string;
        primaryCTA: string;
        secondaryCTA: string;
    };
    lang?: 'en' | 'sr';
}

const { content, lang = 'en' } = Astro.props;
const basePath = lang === 'sr' ? '/sr' : '';
---

<section class="hero">
    <div class="hero-content">
        <h1>{content.title} <span class="highlight">{content.titleHighlight}</span> {content.titleEnd}</h1>
        <p>{content.description}</p>
        <div class="hero-ctas">
            <a href="mailto:office.universedo@gmail.com" target="_blank" class="primary-cta">{content.primaryCTA} </a>
            <!--<a href="#assessment" class="secondary-cta">Take the Free Assessment</a> -->
        </div>
    </div>
    <div class="hero-image">
        <div class="image-placeholder">
            <img src="/hero_image_ana.jpg" alt="Universedo Company">
        </div>
    </div>
</section>

<style>
    .hero {
        background: linear-gradient(135deg, var(--color-bg-hero-start) 0%, var(--color-bg-accent) 100%);
        padding: 4rem 2rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        gap: 3rem;
    }

    .hero-content h1 {
        font-size: 2.5rem;
        line-height: 1.3;
        color: var(--color-dark);
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .highlight {
        color: var(--color-primary);
    }

    .hero-content p {
        font-size: 1.1rem;
        color: var(--color-text-light);
        margin-bottom: 1.5rem;
        line-height: 1.8;
    }

    .hero-ctas {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .primary-cta, .secondary-cta {
        padding: 1rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-block;
    }

    .primary-cta {
        background: var(--color-primary);
        color: white;
        border: 2px solid var(--color-primary);
    }

    .primary-cta:hover {
        background: var(--color-primary-dark);
        box-shadow: 0 6px 20px rgba(155,55,242, 0.2);
        transform: translateY(-3px);
    }

    .secondary-cta {
        color: var(--color-primary);
        border: 2px solid var(--color-primary);
        background: white;
    }

    .secondary-cta:hover {
        background: var(--color-bg-accent);
    }

    .hero-image {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .image-placeholder {
        width: 100%;
        max-width: 350px;
        aspect-ratio: 1;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: var(--color-primary);
        font-weight: 600;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }
    }

    @media (max-width: 768px) {
        .hero {
            grid-template-columns: 1fr;
        }

        .hero-content h1 {
            font-size: 2rem;
        }

        .hero-ctas {
            flex-direction: column;
        }

        .primary-cta, .secondary-cta {
            width: 100%;
            text-align: center;
        }
    }
</style>